<!-- divider_drawable.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:startColor="#FFEBEE"
        android:centerColor="#FFCDD2"
        android:endColor="#FFE0B2"
        android:angle="90"
        android:type="linear"
        android:useLevel="false"/>

    <!-- Rounded corners for the entire shape -->

    <!-- Padding to prevent clipping of rounded corners -->
    <padding
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp"/>
</shape>
