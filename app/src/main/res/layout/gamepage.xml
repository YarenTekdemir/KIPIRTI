<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >


            <ImageButton
                android:id="@+id/okbtn1"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:background="@drawable/left"
                android:contentDescription="@string/ok_button_description"
                android:onClick="buttonClick"

                />

            <TextView
                android:id="@+id/headlineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="GAME PAGE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="44dp"
                android:layout_height="37dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/list" />
        </LinearLayout>


        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal"

            >


            <!-- First Image and Description -->

            <!-- Add space between the images -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"

                >


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv1"
                    android:layout_width="143dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/customborder"
                    android:scaleType="centerCrop"
                    android:src="@drawable/game1"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <TextView
                    android:id="@+id/descriptionTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your description goes here."
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <!-- Second Image and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv2"
                    android:layout_width="150dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:src="@drawable/game2" />


                <TextView
                    android:id="@+id/descriptionTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your description goes here."
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Third Image and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv3"
                    android:layout_width="150dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:src="@drawable/game3" />



                <TextView
                    android:id="@+id/descriptionTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your description goes here."
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Add space between the images -->
            <View
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <!-- Fourth Image and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imv4"
                    android:layout_width="150dp"
                    android:layout_height="102dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:src="@drawable/oyun" />



                <TextView
                    android:id="@+id/descriptionTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your description goes here."
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Fifth Image and Description -->
            <LinearLayout
                android:layout_width="186dp"
                android:layout_height="102dp"
                android:layout_marginLeft="19dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Did you do your daily task?" /> <!-- Center align the text -->


            </LinearLayout>


            <!-- Sixth Image and Description -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_marginRight="30dp"
                android:layout_height="102dp">

                <Button
                    android:id="@+id/daily"
                    android:background="@drawable/customborder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="27dp"
                    android:text="Daily Task" />


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>



        <!-- Fourth Row -->

        <!-- Add more rows as needed -->

    </androidx.constraintlayout.widget.ConstraintLayout>

