<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EA8888"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:text="Correct Answer"
        android:textSize="35sp"
        android:textStyle="bold"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:background="#B35877"
        android:textColor="#331212"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtCorrectAnswer" />

    <TextView
        android:text="Right Answer"
        android:textSize="35sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="#B35877"
        android:textColor="#331212"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtRightAnswer" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtQuestionContainer"
            android:textSize="35sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#040303"
            android:textAlignment="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Random Text" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTextUserInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#040303"
            android:textAlignment="center"
            android:padding="25dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter your guess" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnShow"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check" />

        <Button
            android:id="@+id/btnNext"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>


</LinearLayout>