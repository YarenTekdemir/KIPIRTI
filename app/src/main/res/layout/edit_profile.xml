<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="53dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/okbtn1"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/ok_button_description"
                android:onClick="buttonClick"
                android:src="@drawable/left"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/headlineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="75dp"
                android:text="Edit Profile"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="125dp"
            android:layout_height="117dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:shapeAppearanceOverlay="@style/Circular" />

        <!-- Change profile image button -->
        <Button
            android:id="@+id/changeProfileImageButton"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#FF7043"
            android:text="Change Photo"
            android:textColor="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Form fields -->
        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="432dp"
            android:layout_below="@id/changeProfileImageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical">

            <!-- Nickname field -->
            <EditText
                android:id="@+id/editTextNickname"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Full name"
                android:ems="10"
                android:backgroundTint="#FF7043"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#C2185B"/>

            <!-- Username field -->
            <EditText
                android:id="@+id/editTextUsername"
                android:hint="Your Prefer Username..."
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:backgroundTint="#FF7043"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#C2185B"/>

            <!-- Bio field -->
            <EditText
                android:id="@+id/addbio"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:hint="BÄ°O"
                android:ems="10"
                android:backgroundTint="#FF7043"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#C2185B"/>

            <!-- Favorite word field -->
            <EditText
                android:id="@+id/addfavword"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Fav word"
                android:ems="10"
                android:backgroundTint="#FF7043"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#C2185B"/>

            <!-- Buttons container -->
            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <!-- Save Changes button -->
                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="55dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="#FF7043"
                    android:text="Save Changes"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
