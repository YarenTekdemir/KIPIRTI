<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".daily_task">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        tools:ignore="ExtraText"
        android:background="@drawable/background_gradient">
        <!-- Settings headline and icon -->
        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="55dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dailysbutton"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp"
                android:background="@drawable/left"
                android:contentDescription="@string/ok_button_description"
                android:onClick="buttonClick"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/settings_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:text="Daily Task"
                android:textColor="#D32F2F"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/dailyTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Today's Adventure"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/taskImageView"
            android:layout_width="306dp"
            android:layout_height="186dp"
            android:layout_below="@id/dailyTaskTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/oyun" />

        <TextView
            android:id="@+id/dailyTaskDescription"
            android:layout_width="277dp"
            android:layout_height="75dp"
            android:layout_below="@id/taskImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="25dp"
            android:text="Help the dragon find its lost treasure by learning new words!"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/startTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dailyTaskDescription"
            android:layout_marginTop="157dp"
            android:background="@drawable/button_rounded"
            android:layout_centerHorizontal="true"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="Start Adventure"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            tools:ignore="TouchTargetSizeCheck"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF" /> />

    </RelativeLayout>

</ScrollView>
</RelativeLayout>
