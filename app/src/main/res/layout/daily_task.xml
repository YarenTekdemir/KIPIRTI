<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".daily_task">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dailyTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Today's Adventure"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/taskImageView"
            android:layout_width="306dp"
            android:layout_height="186dp"
            android:layout_below="@id/dailyTaskTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/oyun" />

        <TextView
            android:id="@+id/dailyTaskDescription"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="52dp"
            android:text="Help the dragon find its lost treasure by learning new words!"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/startTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dailyTaskDescription"
            android:layout_marginTop="157dp"
            android:background="@drawable/button_rounded"
            android:layout_centerHorizontal="true"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:paddingEnd="32dp"
            android:paddingBottom="12dp"
            android:text="Start Adventure"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

    </RelativeLayout>

</ScrollView>
