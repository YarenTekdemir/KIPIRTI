<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Oyun">

    <TextView
        android:id="@+id/clockTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's 12 o'clock"
        android:textSize="24sp"
        android:layout_centerInParent="true" />

    <!-- Add ImageView for hour hand (yelkovan) -->

    <!-- Add ImageView for minute hand (akrep) -->

    <!-- Add Button for check action -->

    <ImageView
        android:id="@+id/hourHand"
        android:layout_width="111dp"
        android:layout_height="258dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/hour_hand" />

    <ImageView
        android:id="@+id/minuteHand"
        android:layout_width="124dp"
        android:layout_height="232dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/minute_hand" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_below="@id/clockTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
